<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
      プログラマー一覧
</h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
<% @programmers.each do |programmer| %>
<div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
              <%= link_to programmer_path(programmer) do %>
<%= attachment_image_tag programmer, :image %>
<% end %>
           </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                  <%= attachment_image_tag programmer.user, :profile_image, fallback: "furima-header01.png", class: "profile_image" %>
                  </figure>
                </div>
                <div class="media-content">
<div class="title"><%= link_to programmer.user.username, user_path(programmer.user) %></div>
 </div>
</div>
<div class="content">
<time><%= programmer.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
 </div>
   </div>
    </div>
      </div>
    <% end %>
     </div>
      </div>
       </section>
